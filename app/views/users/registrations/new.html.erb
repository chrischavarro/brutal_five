<div class="row centered">

  <div class="col-sm-6 col-sm-offset-3">
    <h1>Sign up</h1>
      <%= @question  %>
      <%= @test  %>
      <%= session[:idea] %>
      JALEXY.SEXY

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field sign_up_form">
        <%= f.label :email, class: "signup_text" %><br />
        <%= f.email_field :email, autofocus: true, class: "sign_up" %>
      </div>

      <div class="field sign_up_form">
        <%= f.label :password, class: "signup_text" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "sign_up" %>
      </div>

      <div class="field sign_up_form">
        <%= f.label :password_confirmation, class: "signup_text" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "sign_up" %>
      </div>

      <div class="actions sign_up_form">
        <%= f.submit "Sign up", class: "button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    
  </div>  
</div>


